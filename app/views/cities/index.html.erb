<p id="notice"><%= notice %></p>

<h1>Cidades</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to "#{city.state.name}", state_path(city.state.id) %></td>
        <td><%= link_to 'Mostrar', city %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
